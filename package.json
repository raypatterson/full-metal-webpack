{
  "name": "@raypatterson/full-metal-webpack",
  "description": "For when you just want to webpack all the things.",
  "version": "0.0.0-1",
  "author": {
    "name": "Ray Patterson",
    "email": "github.raypatterson@gmail.com"
  },
  "bin": {
    "fmw": "./bin/fmw.js"
  },
  "bugs": "https://github.com/raypatterson/full-metal-webpack/issues",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run test"
    },
    "links": [
      "../passthough-loader",
      "../sws-config"
    ]
  },
  "contributors": [
    {
      "name": "Ray Patterson",
      "email": "github.raypatterson@gmail.com"
    }
  ],
  "dependencies": {
    "@raypatterson/sws-config": "raypatterson/sws-config",
    "autoprefixer": "^6.4.0",
    "clean-webpack-plugin": "^0.1.9",
    "commander": "^2.9.0",
    "css-loader": "^0.24.0",
    "customizr": "^1.0.0-alpha",
    "eslint": "^3.4.0",
    "eslint-config-xo": "^0.15.4",
    "eslint-loader": "^1.5.0",
    "extract-loader": "0.0.2",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "force-case-sensitivity-webpack-plugin": "^0.1.1",
    "fs-jetpack": "^0.9.0",
    "globby": "^6.0.0",
    "html-loader": "^0.4.3",
    "json-loader": "^0.5.4",
    "lodash": "^4.12.0",
    "look-up": "^0.8.3",
    "modernizr-auto-loader": "0.0.2",
    "node-sass": "^3.7.0",
    "open-browser-webpack-plugin": "0.0.2",
    "passthough-loader": "raypatterson/passthough-loader",
    "pkg-dir": "^1.0.0",
    "postcss-loader": "^0.11.0",
    "req-all": "^0.1.0",
    "sass-loader": "^4.0.0",
    "style-loader": "^0.13.1",
    "stylelint-config-standard": "^13.0.0",
    "stylelint-webpack-plugin": "^0.3.1",
    "url-loader": "^0.5.7",
    "webpack": "^1.13.1",
    "webpack-combine-loaders": "^2.0.0",
    "webpack-dev-server": "^1.14.1",
    "webpack-split-by-path": "^0.1.0",
    "webpack-validator": "^2.2.7",
    "webpack-visualizer-plugin": "^0.1.5",
    "yargs": "^5.0.0"
  },
  "devDependencies": {
    "blue-tape": "^0.2.0",
    "commitizen": "^2.8.1",
    "cz-conventional-changelog": "^1.1.6",
    "faucet": "0.0.1",
    "fixpack": "^2.3.1",
    "ghooks": "^1.2.1",
    "linkr": "^0.1.0",
    "updtr": "^0.2.1",
    "xo": "^0.16.0"
  },
  "engines": {
    "node": ">=6.1.0",
    "npm": ">=3.10.0"
  },
  "homepage": "https://github.com/raypatterson/full-metal-webpack/",
  "keywords": [
    "builder",
    "full",
    "metal",
    "webpack",
    "website"
  ],
  "license": "MIT",
  "main": "src",
  "repository": {
    "type": "git",
    "url": "git@github.com:raypatterson/full-metal-webpack.git"
  },
  "scripts": {
    "commit": "git-cz",
    "link": "linkr",
    "link:rm": "linkr remove && npm i",
    "lint": "xo --fix",
    "test": "npm run test:pass",
    "test:fail": "exit 1",
    "test:pass": "exit 0",
    "upgrade": "updtr && fixpack"
  },
  "xo": {
    "envs": [
      "node",
      "commonjs"
    ],
    "esnext": true,
    "space": false,
    "globals": [],
    "rules": {
      "padded-blocks": [
        1,
        "always"
      ]
    }
  }
}
